page {
  height: 100vh;
}
.container_box {
  height: 100vh;
}
.container_box .scroll {
  height: calc(100vh - 90rpx);
  display: flex;
}
.container_box .scroll .left_menu {
  flex: 2;
  height: 100%;
}
.container_box .scroll .left_menu .goods_list_box {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.container_box .scroll .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.container_box .scroll .right_menu {
  flex: 5;
  height: 100%;
}
.container_box .scroll .right_menu .rm_content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 30rpx;
}
.container_box .scroll .right_menu .rm_content .rm_box {
  width: 220rpx;
  margin-bottom: 20rpx;
}
.container_box .scroll .right_menu .rm_content .rm_box image {
  width: 100%;
  height: 140rpx;
  border-radius: 10rpx;
}
.container_box .scroll .right_menu .rm_content .rm_box view {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}
